<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:fontFamily">@font/bilifont</item>
    </style>

    <style name="redTheme" parent="AppTheme">
        <item name="colorPrimary">@color/red_theme</item>
        <item name="colorPrimaryDark">@color/red_theme</item>
        <item name="colorAccent">@color/red_theme</item>
    </style>

    <style name="yellowTheme" parent="AppTheme">
        <item name="colorPrimary">@color/yellow_theme</item>
        <item name="colorPrimaryDark">@color/yellow_theme</item>
        <item name="colorAccent">@color/yellow_theme</item>
    </style>

    <style name="greenTheme" parent="AppTheme">
        <item name="colorPrimary">@color/green_theme</item>
        <item name="colorPrimaryDark">@color/green_theme</item>
        <item name="colorAccent">@color/green_theme</item>
    </style>

    <style name="blueTheme" parent="AppTheme">
        <item name="colorPrimary">@color/blue_theme</item>
        <item name="colorPrimaryDark">@color/blue_theme</item>
        <item name="colorAccent">@color/blue_theme</item>
    </style>

    <style name="violetTheme" parent="AppTheme">
        <item name="colorPrimary">@color/violet_theme</item>
        <item name="colorPrimaryDark">@color/violet_theme</item>
        <item name="colorAccent">@color/violet_theme</item>
    </style>

    <style name="rightPopupWindowTheme">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="base_toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="base_popup_theme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:itemBackground">@drawable/selector_white2gray</item>
        <item name="overlapAnchor">false</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
</resources>

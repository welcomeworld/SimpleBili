<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="16dp"
    android:paddingEnd="8dp"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/recyclerview_favorite_default_item_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/testcover"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="H,16:9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/recyclerview_favorite_default_item_title"
        app:layout_constraintHorizontal_weight="5"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_favorite_box"
        android:background="@color/light_black"
        android:padding="2dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintEnd_toEndOf="@id/recyclerview_favorite_default_item_cover"
        app:layout_constraintBottom_toBottomOf="@id/recyclerview_favorite_default_item_cover"
        />
    <TextView
        android:id="@+id/recyclerview_favorite_default_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/black"
        tools:text="默认收藏夹"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/recyclerview_favorite_default_item_cover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="9"
        />
    <TextView
        android:id="@+id/recyclerview_favorite_default_item_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:singleLine="true"
        android:ellipsize="end"
        tools:text="89"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/recyclerview_favorite_default_item_cover"
        app:layout_constraintBottom_toBottomOf="@id/recyclerview_favorite_default_item_cover"
        />
</android.support.constraint.ConstraintLayout>
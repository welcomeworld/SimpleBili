<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reply_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/video_reply_avator"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:src="@mipmap/ic_default_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.github.welcomeworld.simplebili.widget.ImageTextView
        android:id="@+id/video_reply_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:drawableStart="@mipmap/ic_add"
        android:drawableTint="@color/colorPrimary"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:drawablePadding="4dp"
        android:text="@string/follow"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        app:drawableStartWidth="16dp"
        app:drawableStartHeight="16dp"
        app:drawableCenter="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/video_reply_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/loading"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/video_reply_avator"/>
    <TextView
        android:id="@+id/video_reply_floor_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/loading"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/video_reply_username"
        app:layout_constraintStart_toEndOf="@id/video_reply_avator"/>
    <TextView
        android:id="@+id/video_reply_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/loading"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/video_reply_username"
        app:layout_constraintStart_toEndOf="@id/video_reply_floor_num"/>
    <TextView
        android:id="@+id/video_reply_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/loading"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/video_reply_floor_num"
        app:layout_constraintStart_toEndOf="@id/video_reply_avator"
        app:layout_constraintEnd_toEndOf="parent"/>
    <com.github.welcomeworld.simplebili.widget.ImageTextView
        android:id="@+id/video_reply_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:drawablePadding="4dp"
        android:drawableStart="@mipmap/ic_video_like"
        android:drawableTint="@color/gray_background"
        android:textAlignment="center"
        app:drawableStartHeight="16dp"
        app:drawableStartWidth="16dp"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/video_reply_content"
        app:layout_constraintStart_toEndOf="@id/video_reply_avator"/>
    <com.github.welcomeworld.simplebili.widget.ImageTextView
        android:id="@+id/video_reply_dislike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:drawablePadding="4dp"
        android:drawableStart="@mipmap/ic_video_dislike"
        android:drawableTint="@color/gray_background"
        app:drawableStartHeight="16dp"
        app:drawableStartWidth="16dp"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/video_reply_content"
        app:layout_constraintStart_toEndOf="@id/video_reply_like"/>
    <com.github.welcomeworld.simplebili.widget.ImageTextView
        android:id="@+id/video_reply_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:drawablePadding="4dp"
        android:drawableStart="@mipmap/ic_video_share"
        android:drawableTint="@color/gray_background"
        app:drawableStartHeight="16dp"
        app:drawableStartWidth="16dp"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/video_reply_content"
        app:layout_constraintStart_toEndOf="@id/video_reply_dislike"/>
    <com.github.welcomeworld.simplebili.widget.ImageTextView
        android:id="@+id/video_reply_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:drawableStart="@mipmap/ic_more"
        android:drawableTint="@color/gray_background"
        app:drawableStartHeight="16dp"
        app:drawableStartWidth="16dp"
        app:layout_constraintTop_toBottomOf="@id/video_reply_content"
        app:layout_constraintEnd_toEndOf="parent"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/video_reply_subreply"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:paddingBottom="8dp"
        android:background="@color/gray"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/video_reply_more"
        app:layout_constraintStart_toEndOf="@id/video_reply_avator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/reply_divider_text">
        <TextView
            android:id="@+id/subreply_content1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:visibility="gone"
            android:maxLines="2"
            android:ellipsize="end"
            android:autoLink="all"
            android:textColorLink="@color/blue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/subreply_content2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:visibility="gone"
            android:maxLines="2"
            android:ellipsize="end"
            android:autoLink="all"
            android:textColorLink="@color/blue"
            app:layout_constraintTop_toBottomOf="@id/subreply_content1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/subreply_content3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:visibility="gone"
            android:maxLines="2"
            android:ellipsize="end"
            android:autoLink="all"
            android:textColorLink="@color/blue"
            app:layout_constraintTop_toBottomOf="@id/subreply_content2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/subreply_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:textColor="@color/blue"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/subreply_content3"
            app:layout_constraintStart_toStartOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <TextView
        android:id="@+id/reply_divider_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:text="@string/hot_divider_tips"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/bangumi_detail_desc_cover"
        android:layout_width="72dp"
        android:layout_height="96dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/bangumi_detail_desc_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintStart_toEndOf="@id/bangumi_detail_desc_cover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bangumi_detail_desc_subscribe"
        tools:text="W'Z"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textSize="16sp"
        />
    <com.github.welcomeworld.simplebili.widget.ImageTextView
        android:id="@+id/bangumi_detail_desc_play_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawablePadding="4dp"
        android:drawableStart="@mipmap/ic_video_play_num"
        app:drawableStartHeight="16dp"
        app:drawableStartWidth="16dp"
        android:textSize="12sp"
        tools:text="516.1万"
        app:layout_constraintTop_toBottomOf="@id/bangumi_detail_desc_title"
        app:layout_constraintStart_toStartOf="@id/bangumi_detail_desc_title"/>
    <com.github.welcomeworld.simplebili.widget.ImageTextView
        android:id="@+id/bangumi_detail_desc_subscribe_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:drawablePadding="4dp"
        android:drawableTint="@color/gray_dark"
        android:drawableStart="@mipmap/ic_subscribe"
        app:drawableStartHeight="16dp"
        app:drawableStartWidth="16dp"
        android:textSize="12sp"
        tools:text="33.1万"
        app:layout_constraintTop_toBottomOf="@id/bangumi_detail_desc_title"
        app:layout_constraintStart_toEndOf="@id/bangumi_detail_desc_play_num"/>
    <com.github.welcomeworld.simplebili.widget.ImageTextView
        android:id="@+id/bangumi_detail_desc_subscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:drawableStart="@mipmap/ic_subscribe"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:gravity="center"
        app:drawableStartWidth="16dp"
        app:drawableStartHeight="16dp"
        android:drawablePadding="4dp"
        android:text="@string/following"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@drawable/button_solid_pink"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/bangumi_detail_desc_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        tools:text="连载中，每周三更新"
        app:layout_constraintStart_toStartOf="@id/bangumi_detail_desc_title"
        app:layout_constraintTop_toBottomOf="@id/bangumi_detail_desc_play_num"
        />
    <TextView
        android:id="@+id/bangumi_detail_desc_introduce"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="2"
        android:ellipsize="end"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        tools:text="寒水寺忘忧大师坐化后，一口神秘的黄金棺材入世，掀起江湖纷争。各方势力针锋相对，雷无桀、萧瑟、唐莲、司空千落、天女蕊等相继卷入争端，一场围绕黄金棺材的故事即将上演。策马江湖梦，倚剑踏歌行。黄金棺材..."
        app:layout_constraintStart_toStartOf="@id/bangumi_detail_desc_title"
        app:layout_constraintEnd_toStartOf="@id/bangumi_detail_desc_subscribe"
        app:layout_constraintTop_toBottomOf="@id/bangumi_detail_desc_desc"
        app:layout_constraintBottom_toBottomOf="@id/bangumi_detail_desc_cover"
        />
    <TextView
        android:id="@+id/bangumi_detail_desc_evaluate_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        tools:text="1万人"
        app:layout_constraintBottom_toBottomOf="@id/bangumi_detail_desc_cover"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/bangumi_detail_desc_evaluate_suffix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/evaluate_suffix"
        android:layout_marginBottom="4dp"
        android:textColor="@color/color_FFA726"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bangumi_detail_desc_evaluate_num"
        />
    <TextView
        android:id="@+id/bangumi_detail_desc_evaluate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textColor="@color/color_FFA726"
        android:textSize="16sp"
        tools:text="9.3"
        app:layout_constraintBottom_toTopOf="@id/bangumi_detail_desc_evaluate_num"
        app:layout_constraintEnd_toStartOf="@id/bangumi_detail_desc_evaluate_suffix"
        />
    <com.github.welcomeworld.simplebili.widget.ImageTextView
        android:id="@+id/bangumi_detail_desc_coin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:drawablePadding="4dp"
        android:drawableTop="@mipmap/ic_video_coin"
        android:drawableTint="@color/deep_gray"
        android:textAlignment="center"
        app:drawableTopHeight="24dp"
        app:drawableTopWidth="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bangumi_detail_desc_introduce"
        app:layout_constraintEnd_toStartOf="@id/bangumi_detail_desc_download"
        app:layout_constraintHorizontal_weight="1"
        />
    <com.github.welcomeworld.simplebili.widget.ImageTextView
        android:id="@+id/bangumi_detail_desc_download"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:drawablePadding="4dp"
        android:drawableTop="@mipmap/ic_download_dark"
        android:drawableTint="@color/deep_gray"
        android:textAlignment="center"
        android:text="@string/download"
        app:drawableTopHeight="24dp"
        app:drawableTopWidth="24dp"
        app:layout_constraintStart_toEndOf="@id/bangumi_detail_desc_coin"
        app:layout_constraintTop_toBottomOf="@id/bangumi_detail_desc_introduce"
        app:layout_constraintEnd_toStartOf="@id/bangumi_detail_desc_share"
        app:layout_constraintHorizontal_weight="1"
        />
    <!---<com.github.welcomeworld.simplebili.widget.ImageTextView
        android:id="@+id/bangumi_detail_desc_evaluate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:drawablePadding="4dp"
        android:drawableTop="@mipmap/ic_video_share"
        android:drawableTint="@color/deep_gray"
        android:textAlignment="center"
        android:text="@string/evaluate"
        app:drawableTopHeight="24dp"
        app:drawableTopWidth="24dp"
        app:layout_constraintStart_toEndOf="@id/bangumi_detail_desc_download"
        app:layout_constraintTop_toBottomOf="@id/bangumi_detail_desc_introduce"
        app:layout_constraintEnd_toStartOf="@id/bangumi_detail_desc_share"
        app:layout_constraintHorizontal_weight="1"
        />-->
    <com.github.welcomeworld.simplebili.widget.ImageTextView
        android:id="@+id/bangumi_detail_desc_share"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:drawablePadding="4dp"
        android:drawableTop="@mipmap/ic_video_share"
        android:drawableTint="@color/deep_gray"
        android:textAlignment="center"
        app:drawableTopHeight="24dp"
        app:drawableTopWidth="24dp"
        app:layout_constraintStart_toEndOf="@id/bangumi_detail_desc_download"
        app:layout_constraintTop_toBottomOf="@id/bangumi_detail_desc_introduce"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        />
    <TextView
        android:id="@+id/bangumi_detail_desc_recommend_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/more_recommend"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bangumi_detail_desc_share"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/bangumi_detail_desc_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/bangumi_detail_desc_recommend_header"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>
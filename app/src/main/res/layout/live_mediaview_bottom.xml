<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/play_bottom_bg"
        xmlns:tools="http://schemas.android.com/tools">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/pauseOrStart"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:src="@drawable/play_pause"
                android:background="@color/transparent"
                android:contentDescription="@string/play_desc"/>
            <TextView
                android:id="@+id/current_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textColor="@color/white"
                tools:text="00:00"/>
            <ImageView
                android:id="@+id/danmaku_status"
                android:layout_marginStart="16dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/player_danmaku_status"
                android:contentDescription="@string/danmaku_status_desc"/>
            <TextView
                android:id="@+id/danmaku_start"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="32dp"
                android:background="@drawable/danmaku_start"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/light_black"
                android:gravity="center"
                android:textSize="12sp"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/danmaku_hint"/>
            <ImageView
                android:id="@+id/fullscreen"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@mipmap/ic_player_portrait_fullscreen"
                android:contentDescription="@string/fullscreen_desc"/>
            <TextView
                android:id="@+id/play_video_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/video_list"
                android:textSize="16sp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="8dp"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
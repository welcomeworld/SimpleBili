<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        android:id="@+id/ping_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/base_toolbar"
        android:minHeight="56dp"
        app:navigationIcon="@mipmap/player_back"
        app:contentInsetStartWithNavigation="0dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/net_check">
    </android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/ping_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:text="开始测试"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/background_pink_stroke"
        app:layout_constraintTop_toBottomOf="@id/ping_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/ping_copy_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:padding="8dp"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:textSize="16sp"
        android:textColor="@color/gray_background"
        android:background="@drawable/background_pink_stroke"
        android:text="复制测试结果"
        app:layout_constraintTop_toBottomOf="@id/ping_toolbar"
        app:layout_constraintStart_toEndOf="@id/ping_start"
        />
    <ProgressBar
        android:id="@+id/ping_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/ping_copy_result"
        app:layout_constraintBottom_toBottomOf="@id/ping_copy_result"
        app:layout_constraintStart_toEndOf="@id/ping_copy_result"
        />
    <TextView
        android:id="@+id/ping_local_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/black"
        tools:text="本机IP:223.104.65.69,中国 广东 移动"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/ping_start"
        app:layout_constraintStart_toStartOf="parent"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/ping_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/ping_local_ip"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>
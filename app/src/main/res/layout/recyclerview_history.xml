<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/history_recyclerView_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingEnd="8dp"
    android:paddingStart="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/history_recyclerView_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:src="@mipmap/testcover"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="H,16:9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/history_recyclerView_title"
        app:layout_constraintHorizontal_weight="5"/>
    <TextView
        android:id="@+id/history_recyclerView_viewProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="00:00"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toBottomOf="@id/history_recyclerView_cover"
        app:layout_constraintEnd_toStartOf="@id/history_recyclerView_backslash"
        />
    <TextView
        android:id="@+id/history_recyclerView_backslash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="@string/backslash"
        android:textColor="@color/white"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toBottomOf="@id/history_recyclerView_cover"
        app:layout_constraintEnd_toStartOf="@id/history_recyclerView_duration"
        />
    <TextView
        android:id="@+id/history_recyclerView_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="24:00"
        android:textSize="12sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/history_recyclerView_cover"
        app:layout_constraintEnd_toEndOf="@id/history_recyclerView_cover"
        />
    <TextView
        android:id="@+id/history_recyclerView_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="@color/black"
        tools:text="用《还珠格格》音乐打开《如懿传》，简直神无违和感"
        app:layout_constraintStart_toEndOf="@id/history_recyclerView_cover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="9"/>
    <TextView
        android:id="@+id/history_recyclerView_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="第12话 听不见烟花的声音 后篇/辉夜大小姐不想"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/history_recyclerView_cover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/history_recyclerView_title"
        />
    <com.github.welcomeworld.simplebili.widget.ImageTextView
        android:id="@+id/history_recyclerView_upper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:textSize="12sp"
        tools:text="潇湘公子寻"
        android:textColor="@color/gray_background"
        android:drawableStart="@mipmap/ic_up"
        android:drawablePadding="4dp"
        app:drawableStartWidth="16dp"
        app:drawableStartHeight="16dp"
        app:layout_constraintStart_toEndOf="@id/history_recyclerView_cover"
        app:layout_constraintBottom_toTopOf="@id/history_recyclerView_viewTime"/>
    <com.github.welcomeworld.simplebili.widget.ImageTextView
        android:id="@+id/history_recyclerView_viewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="12sp"
        tools:text="今天16:43"
        android:textColor="@color/gray_background"
        app:layout_constraintStart_toEndOf="@id/history_recyclerView_cover"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/history_recyclerView_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="12sp"
        tools:text="英雄联盟"
        android:textColor="@color/gray_background"
        app:layout_constraintStart_toEndOf="@id/history_recyclerView_viewTime"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include android:id="@+id/favorite_toolbar" layout="@layout/toolbar_navigation"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/favorite_tablayout"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="?attr/colorPrimaryDark"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/white_transparent"
        app:tabIndicatorColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/favorite_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        >
        <android.support.design.widget.TabItem
            android:text="@string/video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.design.widget.TabLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/colorPrimaryDark"
        app:layout_constraintTop_toTopOf="@id/favorite_tablayout"
        app:layout_constraintStart_toEndOf="@id/favorite_tablayout"
        app:layout_constraintBottom_toBottomOf="@id/favorite_tablayout"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/favorite_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/favorite_tablayout"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    </android.support.v4.view.ViewPager>
</android.support.constraint.ConstraintLayout>